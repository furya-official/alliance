FROM golang:1.18.7-bullseye AS build

RUN apt update && apt install jq build-essential -y

WORKDIR /furyad
COPY . /furyad

RUN curl https://get.ignite.com/cli@v0.25.1! | bash
RUN ignite chain build --output . --verbose

FROM debian:bullseye AS run
COPY ./scripts/containers/build-wrapper.sh /furyad/build-wrapper.sh

VOLUME /furyad
COPY --from=build /furyad/ /furyad/
WORKDIR /furyad

EXPOSE 26656 26657
ENTRYPOINT ["/furyad/build-wrapper.sh"]
CMD ["start", "--log_format", "plain"]
STOPSIGNAL SIGTERM
